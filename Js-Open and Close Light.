<input type="button" value="Open Light" onclick="openLight();">
    <img width="200px" src="img/img open light.png" alt="Light" id="Picture" >
<input type="button" value="Close Light" onclick="closeLight();">
    <!-- <img width="auto" src="img/close light.png" alt="Light" id="Picture" > -->
    <script>
    function openLight() {
        document.getElementById('Picture').src="img/img open light.png"
    }
    function closeLight() {
        document.getElementById('Picture').src="img/close light.png"      
    }
    </script>
